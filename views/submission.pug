html
    block content
      .main.container
        .row
          .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Sign Up

            // register form
            form(method='POST' action='/submit')
              div.form-group
                label(for='name') Title:
                input#name.form-control(type='text', placeholder='Chair' name='name')
              div.form-group
                label(for='reviewText') Your review:
                input#reviewText.form-control(type='text', placeholder='Review text here' name='reviewText')
              button.btn.btn-primary(type='submit') Submit
